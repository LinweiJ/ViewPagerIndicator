<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lwj.widget.viewpagerindicator_demo.CarouseActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="默认(default)"/>
            <com.lwj.widget.viewpagerindicator.ViewPagerIndicator
                android:id="@+id/indicator_default"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#efefef"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="圆(circle)"/>
            <com.lwj.widget.viewpagerindicator.ViewPagerIndicator
                android:id="@+id/indicator_circle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#efefef"
                app:vpi_default_color="#cdcdcd"
                app:vpi_distance="80dp"
                app:vpi_distanceType="BY_DISTANCE"
                app:vpi_indicatorType="CIRCLE"
                app:vpi_radius="10dp"
                app:vpi_radius_selected="15dp"
                app:vpi_animation="false"
                app:vpi_selected_color="#F5A523"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="线(line)"/>
            <com.lwj.widget.viewpagerindicator.ViewPagerIndicator
                android:id="@+id/indicator_line"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#efefef"
                app:vpi_default_color="#cdcdcd"
                app:vpi_distance="800dp"
                app:vpi_distanceType="BY_LAYOUT"
                app:vpi_indicatorType="LINE"
                app:vpi_length="24dp"
                app:vpi_radius="8dp"
                app:vpi_selected_color="#FF23EEF5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="圆角矩形(circle_line)"/>
            <com.lwj.widget.viewpagerindicator.ViewPagerIndicator
                android:id="@+id/indicator_circle_line"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#efefef"
                app:vpi_default_color="#FF239AF5"
                app:vpi_distance="60dp"
                app:vpi_distanceType="BY_LAYOUT"
                app:vpi_indicatorType="CIRCLE_LINE"
                app:vpi_radius="10dp"
                app:vpi_selected_color="#FF239AF5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="弹性球(bezier)"/>
            <com.lwj.widget.viewpagerindicator.ViewPagerIndicator
                android:id="@+id/indicator_bezier"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#efefef"
                app:vpi_default_color="#cdcdcd"
                app:vpi_distance="80dp"
                app:vpi_distanceType="BY_DISTANCE"
                app:vpi_indicatorType="BEZIER"
                app:vpi_radius="15dp"
                app:vpi_selected_color="#FFA523F5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="弹簧粘性球(spring)"/>
            <com.lwj.widget.viewpagerindicator.ViewPagerIndicator
                android:id="@+id/indicator_spring"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#efefef"
                app:vpi_default_color="#cdcdcd"
                app:vpi_distance="80dp"
                app:vpi_distanceType="BY_DISTANCE"
                app:vpi_indicatorType="SPRING"
                app:vpi_radius="15dp"
                app:vpi_selected_color="#FF23F57E"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="进度条(process)"/>
            <com.lwj.widget.viewpagerindicator.ViewPagerIndicator
                android:id="@+id/indicator_progress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#efefef"
                app:vpi_default_color="#cdcdcd"
                app:vpi_distance="80dp"
                app:vpi_distanceType="BY_DISTANCE"
                app:vpi_indicatorType="PROGRESS"
                app:vpi_radius="15dp"
                app:vpi_selected_color="#FF23557E"
                />
        </LinearLayout>

    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:textSize="8sp"
        android:onClick="not_carousel"
        android:visibility="visible"
        android:text="不是轮播图\n(not_carousel)"
        />

</RelativeLayout>
